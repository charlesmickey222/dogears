<%- include('../partials/html-head') %> 
<%- include('../partials/nav') %> 
<% if (user) { %>
  <div class="card">
    <form action="/authors" method="POST" id="author-form">
      <ul class="list-group">
        <li class="list-group-item">
          <label for="name-input">Author</label>
          <input type="text" name="name" id="name-input">
        </li>
        <li class="list-group-item">
          <label for="living-input">living?</label>
          <input type="checkbox" name="living" id="living-input">
        </li>
        <li class="list-group-item">
          <label for="book-input">work published: </label>
          <select style="width: 200px;" name="books" form="author-form" id="book-input">
            <% books.forEach(book => { %>
              <option value="<%= book._id%>"><div> <%= book.name %> </div></option>
            <% }) %>
          </select>
        </li>
        <button type="submit">add Author</button>
    </ul>
    </form>
  </div>
<% }else{ %>
  <h1>Log In to add an Author</h1>
<%} %>
<ul>
<% authors.forEach(author => { %>
<li>
  Author: <a href="/authors/<%= author._id%>"><%= author.name %></a>
  <form action="/authors/<%=author._id%>?_method=DELETE" method="POST">
    <button>x</button>
  </form>
</li>
<% }) %>
</ul>
<%- include('../partials/footer') %> 